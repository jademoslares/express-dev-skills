<%- include('../partials/header') %>

<form action="/skills/<%= skill.id %>?_method=PUT" method="POST">
  <input type="text" name="skill" value="<%= skill.skill %>" />
  <input type="text" name="description" value="<%= skill.description %>" />
  <label>
    <input type="checkbox" name="done" <%= skill.done ? 'checked' : '' %>>
    Complete?
  </label>
  <button type="submit">Save Skills</button>
</form>

<%- include('../partials/footer') %>
